---
import { config } from '../config';
---

<footer class="bg-slate-950 border-t border-slate-800 py-12 px-4">
	<div class="container mx-auto max-w-6xl">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
			<div>
				<h3 class="text-2xl font-bold text-white mb-4 font-royagna">
					TEX.<span class="text-accent-500">LAB</span>
				</h3>
				<p class="text-slate-400">
					Indumentaria corporativa de alta calidad para potenciar tu marca.
				</p>
			</div>
			<div>
				<h4 class="text-lg font-semibold text-white mb-4">Contacto</h4>
				<ul class="space-y-2 text-slate-400">
					<li>
						<a href={`mailto:${config.email}`} class="hover:text-white transition-colors">
							{config.email}
						</a>
					</li>
					<li>
						<a
							href={`https://wa.me/${config.whatsapp.phone}`}
							target="_blank"
							rel="noopener noreferrer"
							class="hover:text-white transition-colors"
						>
							WhatsApp
						</a>
					</li>
				</ul>
			</div>
			<div>
				<h4 class="text-lg font-semibold text-white mb-4">Enlaces</h4>
				<ul class="space-y-2 text-slate-400">
					<li>
						<a href="#servicios" class="hover:text-white transition-colors">Servicios</a>
					</li>
					<li>
						<a href="#contacto" class="hover:text-white transition-colors">Contacto</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="border-t border-slate-800 pt-8 text-center text-slate-500 text-sm">
			<p>&copy; {new Date().getFullYear()} TEX.LAB. Todos los derechos reservados.</p>
		</div>
	</div>
</footer>
