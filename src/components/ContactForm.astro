<section id="contacto" class="py-20 px-4 bg-gradient-to-br from-slate-900 to-primary-950">
	<div class="container mx-auto max-w-2xl">
			<div class="text-center mb-12 animate-fade-in">
			<h2 class="text-3xl md:text-4xl font-black mb-4 text-white uppercase tracking-tight">
				Contactanos
			</h2>
			<p class="text-lg text-slate-200 font-medium">
				Completá el formulario y te respondemos a la brevedad
			</p>
		</div>

		<form
			class="bg-slate-900/30 backdrop-blur-xl p-10 border-4 border-white/20 shadow-[8px_8px_0px_0px_rgba(255,255,255,0.1)] animate-slide-up"
			method="POST"
			action="/api/contact"
		>
			<div class="mb-8">
				<label for="nombre" class="block text-sm font-black text-white uppercase tracking-wide mb-3">
					Nombre completo
				</label>
				<input
					type="text"
					id="nombre"
					name="nombre"
					required
					class="w-full px-5 py-4 bg-slate-900/50 backdrop-blur-sm border-4 border-white/20 focus:border-accent-500 text-white placeholder-slate-400 focus:outline-none transition-all font-medium"
					placeholder="Tu nombre"
				/>
			</div>

			<div class="mb-8">
				<label for="empresa" class="block text-sm font-black text-white uppercase tracking-wide mb-3">
					Empresa
				</label>
				<input
					type="text"
					id="empresa"
					name="empresa"
					class="w-full px-5 py-4 bg-slate-900/50 backdrop-blur-sm border-4 border-white/20 focus:border-accent-500 text-white placeholder-slate-400 focus:outline-none transition-all font-medium"
					placeholder="Nombre de tu empresa"
				/>
			</div>

			<div class="mb-8">
				<label for="telefono" class="block text-sm font-black text-white uppercase tracking-wide mb-3">
					Teléfono
				</label>
				<input
					type="tel"
					id="telefono"
					name="telefono"
					required
					pattern="[0-9+\s-]+"
					class="w-full px-5 py-4 bg-slate-900/50 backdrop-blur-sm border-4 border-white/20 focus:border-accent-500 text-white placeholder-slate-400 focus:outline-none transition-all font-medium"
					placeholder="+54 9 11 1234-5678"
				/>
			</div>

			<div class="mb-8">
				<label for="email" class="block text-sm font-black text-white uppercase tracking-wide mb-3">
					Email
				</label>
				<input
					type="email"
					id="email"
					name="email"
					required
					class="w-full px-5 py-4 bg-slate-900/50 backdrop-blur-sm border-4 border-white/20 focus:border-accent-500 text-white placeholder-slate-400 focus:outline-none transition-all font-medium"
					placeholder="tu@email.com"
				/>
			</div>

			<div class="mb-8">
				<label for="mensaje" class="block text-sm font-black text-white uppercase tracking-wide mb-3">
					Mensaje
				</label>
				<textarea
					id="mensaje"
					name="mensaje"
					rows="4"
					required
					class="w-full px-5 py-4 bg-slate-900/50 backdrop-blur-sm border-4 border-white/20 focus:border-accent-500 text-white placeholder-slate-400 focus:outline-none transition-all resize-none font-medium"
					placeholder="Contanos sobre tu proyecto..."
				></textarea>
			</div>

			<button
				type="submit"
				class="w-full px-10 py-5 bg-accent-600/90 backdrop-blur-sm hover:bg-accent-600 text-white font-black uppercase tracking-wide border-4 border-white/30 hover:border-white/50 transition-all duration-300 transform hover:scale-[1.02] hover:shadow-[8px_8px_0px_0px_rgba(249,115,22,0.8)] shadow-[4px_4px_0px_0px_rgba(255,255,255,0.2)]"
				data-cta="contact-form-submit"
			>
				Enviar consulta
			</button>
		</form>
	</div>
</section>
