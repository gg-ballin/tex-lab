---
import { config } from '../config';
---

<header class="sticky top-0 z-40 bg-slate-900/40 backdrop-blur-xl border-b border-white/10 shadow-lg shadow-black/20">
	<nav class="container mx-auto max-w-6xl px-4 py-4">
		<div class="flex items-center justify-between">
			<a href="/" class="text-4xl font-bold text-white hover:text-primary-400 transition-colors font-royagna">
				TEX.<span class="text-accent-500">LAB</span>
			</a>
			<div class="hidden md:flex items-center gap-8">
				<a href="#servicios" class="text-slate-300 hover:text-white transition-colors">
					Servicios
				</a>
				<a href="#productos" class="text-slate-300 hover:text-white transition-colors">
					Productos
				</a>
				<a href="#contacto" class="text-slate-300 hover:text-white transition-colors">
					Contacto
				</a>
				<a
					href={`https://wa.me/${config.whatsapp.phone}?text=${config.whatsapp.message}`}
					target="_blank"
					rel="noopener noreferrer"
					class="px-6 py-3 bg-accent-600/90 backdrop-blur-sm hover:bg-accent-600 text-white font-black uppercase tracking-wide border-4 border-white/30 hover:border-white/50 transition-all duration-300 transform hover:scale-[1.02] hover:shadow-[4px_4px_0px_0px_rgba(249,115,22,0.8)] shadow-[2px_2px_0px_0px_rgba(255,255,255,0.2)]"
					data-cta="whatsapp-header"
				>
					WhatsApp
				</a>
			</div>
		</div>
	</nav>
</header>
