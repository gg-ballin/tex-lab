---
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
import WhatsAppSticky from '../components/WhatsAppSticky.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang="es-AR">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>TEX.LAB - Indumentaria Corporativa | Estampado DTF | Remeras y Buzos Personalizados</title>
		<meta name="description" content="Indumentaria corporativa de alta calidad con estampado DTF. Remeras, buzos y prendas personalizadas para empresas. PotenciÃ¡ tu marca con TEX.LAB." />
		<meta name="keywords" content="indumentaria corporativa, estampado DTF, remeras personalizadas, buzos corporativos, ropa de trabajo, Argentina" />
		<meta name="author" content="TEX.LAB" />
		<meta name="robots" content="index, follow" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://texlab.com.ar/" />
		<meta property="og:title" content="TEX.LAB - Indumentaria Corporativa" />
		<meta property="og:description" content="Indumentaria corporativa de alta calidad con estampado DTF. Remeras, buzos y prendas personalizadas para empresas." />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://texlab.com.ar/" />
		<meta property="twitter:title" content="TEX.LAB - Indumentaria Corporativa" />
		<meta property="twitter:description" content="Indumentaria corporativa de alta calidad con estampado DTF. Remeras, buzos y prendas personalizadas para empresas." />
		
		<!-- Canonical URL -->
		<link rel="canonical" href="https://texlab.com.ar/" />
		
		<!-- Google Fonts - Space Grotesk (Brutalist-friendly) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
	</head>
	<body> 
		<Header />
		<main>
			<Hero />
			<Services />
			<ContactForm />
		</main>
		<Footer />
		<WhatsAppSticky />
	</body>
</html>
